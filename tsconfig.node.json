{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationDir": "./types",  // Explicit declaration output
    "outDir": "./dist-node",
    "rootDir": "./src",  // Focus on source directory
    "module": "ESNext",
    "moduleResolution": "node",
    "allowJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "lib": ["ES2020"],
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*.ts"],  // Narrow scope
  "exclude": [
    "node_modules",
    "dist",
    "dist-node",
    "public",
    "**/*.spec.ts"
  ]
}

{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "outDir": "./dist-node",
    "rootDir": ".",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "lib": ["ES2020"],
    "types": ["node"]
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist-node"]
}

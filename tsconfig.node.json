{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationDir": "./types",
    "outDir": "./dist-node",
    "rootDir": "./src", 
    "module": "ESNext",
    "moduleResolution": "node",
    "allowJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "lib": ["ES2020"],
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*.ts"], 
  "exclude": [
    "node_modules",
    "dist",
    "dist-node",
    "public",
    "**/*.spec.ts"
  ]
}
